#!/bin/sh
## /etc/grub.d/08-netinstall
## Create grub boot menu entry for Debian netinstall

dir="/boot/d-i"

menu="Debian netinstall"
echo "$menu" >&2

# Print GRUB menu entry
cat <<__END__
menuentry "$menu" {
  linux $dir/linux vga=788 auto=true file=$dir/preseed.cfg -- quiet
  initrd $dir/initrd.gz
}
__END__
